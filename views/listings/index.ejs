<% layout("layouts/boilerplate.ejs") -%>
<body>

    <div class="filters" id="filters">
        <div class="filter">
        <div><a href="/listings/Trending"><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </a>
        </div>
        <div class="filter">
        <div><a href="/listings/Rooms"><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </a>
        </div>
        <div class="filter">
        <div><a href="/listings/Iconic_Cities"><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
    </a>
        </div>
        <div class="filter">
        <div><a href="/listings/Mountains"><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
    </a>
        </div>
        <div class="filter">
        <div><a href="/listings/Castles"><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
    </a>
        </div>
        <div class="filter">
        <div><a href="/listings/Amazing_Pools"><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
    </a>
        </div>
        <div class="filter">
        <div><a href="/listings/Camping"><i class="fa-solid fa-tents"></i></div>
        <p>Camping</p>
    </a>
        </div>
        <div class="filter">
        <div><a href="/listings/Farms"><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
    </a>
        </div>
        <div class="filter">
        <div><a href="/listings/Arctic"><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
    </a>
        </div>
        <div class="filter">
        <div><a href="/listings/Beaches"><i class="fa-solid fa-umbrella-beach"></i></i></div>
        <p>Beaches</p>
    </a>
        </div>
        <div class="filter">
        <div><a href="/listings/Boats"><i class="fa-solid fa-ship"></i></div>
        <p> Boats</p>
    </a>
        </div>
        <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
        </div>
        </div>
        </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let list of allListings){%>
            <a href="/listings/<%= list._id%>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%= list.image.url%>" class="card-img-top" alt="listingimage" style="height: 20rem; width:5rem">
                <div class="card-body">
                <div class="card-img-overlay"></div>
                  <p class="card-text">
                    <b><%= list.title%><br></b>
                    &#8377;<%= list.price.toLocaleString("en-IN")%>/night
                   <i class="tax-info"> &nbsp; &nbsp; +18%GST</i>
                </p>
                </div>
              </div>
            </a>
        <%}%>
    </div>
</body>